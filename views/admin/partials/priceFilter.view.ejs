<form action="" class="mb-1" id="form-price">
  <div class="form-box d-flex justify-content-center w-100">
    <input
      type="number"
      min="0"
      step="0.01"
      value="<% if(valueRange.min) { %><%= valueRange.min %><% } %>"
      placeholder="Giá tối thiểu"
      class="form-control me-1 form-inpmin"
    />
    <input
      type="number"
      min="0"
      step="0.01"
      value="<% if(valueRange.max) { %><%= valueRange.max %><% } %>"
      placeholder="Giá tối đa"
      class="form-control me-1 form-inpmax"
    />
    <button type="submit" class="btn btn-primary btn-price"><i class="bi bi-funnel"></i></button>
  </div>
</form>
