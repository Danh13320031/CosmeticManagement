<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <link rel="icon" type="image/x-icon" href="" />
    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/setup.css" />
    <link rel="stylesheet" href="/admin/styles/style.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes('category-view')) { %>
        <div class="row">
          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
            <h1><%= pageTitle %></h1>
          </div>
          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12"></div>
          <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
            <%-include("../../partials/search.view.ejs") %>
          </div>
        </div>

        <div class="card mb-3">
          <div class="card-header">Bộ lọc</div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                  <%-include("../../partials/statusFilter.view.ejs") %>
                </div>
                <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-5 col-sm-12 col-12"></div>
                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12"></div>
              </div>
            </div>
          </div>
        </div>

        <div class="card mb-3">
          <div class="card-header">
            Danh sách (trang hiện tại: <%= objPagination.currentPage %>)
          </div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-4">
                  <%-include("../../partials/changeMulti.view.ejs", {url: 'categories', type:
                  'category'}) %>
                </div>
                <div class="col-4"></div>
                <div class="col-2"></div>
                <div class="col-2">
                  <% if(roleAuth.permission.includes('category-add')) { %>
                  <a href="<%= prefixAdmin %>/categories/create" class="btn btn-primary float-end">
                    <i class="bi bi-plus-lg me-1"></i>Thêm mới danh mục
                  </a>
                  <% } %>
                </div>
              </div>
            </div>

            <div class="container-fluid">
              <div class="row">
                <div class="col-12 overflow-x-scroll">
                  <% if (categoryList.length == 0) {%>
                  <div class="text-center text-white bg-danger p-2">
                    Không tìm thấy danh mục nào
                  </div>
                  <% } %>
                  <table class="table table-hover table-sm">
                    <thead>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        <input type="checkbox" name="checkall" class="me-5" />STT
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hình ảnh
                      </th>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Tiêu đề
                      </th>
                      <% if(roleAuth.permission.includes('category-change-status')) { %>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Trạng thái
                      </th>
                      <% } %>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Vị trí
                      </th>
                      <% if(roleAuth.permission.includes('category-update') ||
                      roleAuth.permission.includes('category-sort-delete')) { %>
                      <th class="bg-primary-subtle text-primary text-decoration-underline">
                        Hành động
                      </th>
                      <% } %>
                    </thead>

                    <tbody>
                      <% categoryList.forEach((item, index) => { %>
                      <tr title="<%= item.title %>">
                        <td>
                          <input
                            type="checkbox"
                            name="checkid"
                            value="<%= item._id %>"
                            class="me-5"
                          />
                          <%= index + 1 %>
                        </td>
                        <td>
                          <img src="<%= item.thumbnail %>" alt="<%= item.title %>" width="100px" />
                        </td>
                        <td><%= item.title %></td>
                        <% if(roleAuth.permission.includes('category-change-status')) { %>
                        <td>
                          <% if(item.status === 'active') {%>
                          <a
                            href="javascript:;"
                            data-id="<%= item._id %>"
                            data-status="active"
                            change-status
                            class="badge text-bg-success"
                            >Hoạt động</a
                          >
                          <% } else {%>
                          <a
                            href="javascript:;"
                            data-id="<%= item._id %>"
                            data-status="inactive"
                            change-status
                            class="badge text-bg-warning"
                            >Ngừng hoạt động</a
                          >
                          <% } %>
                        </td>
                        <% } %>
                        <td><%= item.position %></td>
                        <% if(roleAuth.permission.includes('category-update') ||
                        roleAuth.permission.includes('category-sort-delete')) { %>
                        <td>
                          <% if(roleAuth.permission.includes('category-update')) { %>
                          <a
                            href="<%= prefixAdmin %>/categories/update/<%= item._id %>"
                            data-id="<%= item._id %>"
                            class="btn btn-primary btn-sm mb-1 btn-update"
                          >
                            <i class="bi bi-pencil-square me-1"></i>Sửa
                          </a>
                          <% } %>

                          <!-------------------------------------------------------------------->
                          <% if(roleAuth.permission.includes('category-sort-delete')) { %>
                          <button
                            class="btn btn-danger btn-sm ml-1 mb-1 btn-delete"
                            data-id="<%= item._id %>"
                          >
                            <i class="bi bi-trash3 me-1"></i>Xóa
                          </button>
                          <% } %>
                        </td>
                        <% } %>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <form
          action="<%= prefixAdmin %>/categories"
          method="POST"
          class="d-none"
          form-change-status
        ></form>

        <form
          action="<%= prefixAdmin %>/categories"
          method="POST"
          class="d-none"
          form-delete
        ></form>

        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-9 col-md-9 col-12">
              <%-include("../../partials/pagination.view.ejs") %>
            </div>
            <div class="col-lg-3 col-md-3 col-12">
              <a href="<%= prefixAdmin %>/categories/garbage" class="btn btn-primary float-end"
                ><i class="bi bi-trash me-2"></i>Thùng rác</a
              >
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Script File -->
    <script src="/admin/scripts/statusFilter.js"></script>
    <script src="/admin/scripts/pagination.js"></script>
    <script src="/admin/scripts/changeStatus.js"></script>
    <script src="/admin/scripts/changeMulti.js"></script>
    <script src="/admin/scripts/delete.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../reload/reload.js"></script>
  </body>
</html>
