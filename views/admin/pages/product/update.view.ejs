<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <link rel="icon" type="image/x-icon" href="" />
    <!-- Style Library & Framework -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Style File -->
    <link rel="stylesheet" href="/setup.css" />
    <link rel="stylesheet" href="/admin/styles/style.css" />
  </head>
  <body>
    <%-include("../../partials/header.view.ejs") %>

    <div class="body">
      <%-include("../../partials/sider.view.ejs") %>
      <div class="main">
        <%-include("../../partials/alertMessage.view.ejs") %> <%
        if(roleAuth.permission.includes('product-update')) { %>
        <h1 class="mb-4"><%= pageTitle %></h1>
        <form
          action="<%= prefixAdmin %>/products/update/<%= product._id %>?_method=PATCH"
          method="POST"
          enctype="multipart/form-data"
          id="form-handle"
        >
          <div class="container-fluid">
            <div class="row">
              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="title">Tiêu đề</label>
                  <input
                    type="text"
                    value="<%= product.title %>"
                    name="title"
                    required
                    class="form-control"
                    id="title"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="category">Danh mục</label>
                  <!-- <input type="text" name="parent_id" id="parent_id" class="form-control" /> -->
                  <select name="category" id="category" class="form-control">
                    <option disabled>-- Chọn danh mục --</option>
                    <% if(categoryList.length > 0) {%>
                    <%-include("../../partials/selecttree.view.ejs", {categoryList, level: 1,
                    parent_id: product.category}) %> <% } %>
                  </select>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="description">Mô tả</label>
                  <textarea name="description" class="form-control" id="description">
<%= product.description %></textarea
                  >
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="price">Giá cả ($)</label>
                  <input
                    type="number"
                    value="<%= product.price %>"
                    min="0"
                    step="0.01"
                    name="price"
                    placeholder="Ví dụ: 45.34, 5.5, 70.56,..."
                    required
                    class="form-control"
                    id="price"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="discount">Giảm giá (%)</label>
                  <input
                    type="number"
                    value="<%= product.discount %>"
                    min="0"
                    step="0.01"
                    name="discount"
                    placeholder="Ví dụ: 10.3, 5.5, 7,..."
                    required
                    class="form-control"
                    id="discount"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="stock">Số lượng</label>
                  <input
                    type="number"
                    value="<%= product.stock %>"
                    min="0"
                    name="stock"
                    required
                    class="form-control"
                    id="stock"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="form-group mb-4">
                  <label for="position">Vị trí</label>
                  <input
                    type="number"
                    value="<%= product.position %>"
                    name="position"
                    min="1"
                    placeholder="Tự động tăng"
                    class="form-control"
                    id="position"
                  />
                </div>
              </div>

              <div class="col-4">
                <div class="form-group mb-4">
                  <label for="warranty">Thời gian bảo hành</label>
                  <input
                    type="text"
                    value="<%= product.warranty %>"
                    name="warranty"
                    placeholder="Ví dụ: 1 year, 1.5 months, 2 years, lifetime,..."
                    class="form-control"
                    id="warranty"
                  />
                </div>
              </div>

              <div class="col-4">
                <div class="form-group mb-4">
                  <label for="brand">Thương hiệu sản phẩm</label>
                  <input
                    type="text"
                    value="<%= product.brand %>"
                    name="brand"
                    placeholder="Ví dụ: Chanel, La Roche-Posay,..."
                    class="form-control"
                    id="brand"
                  />
                </div>
              </div>

              <div class="col-4">
                <div class="form-group mb-4">
                  <label for="rating">
                    Đánh giá chất lượng <% for(let i = 1; i <= product.rating; i++) {%>
                    <i class="bi bi-star-fill text-warning"></i>
                    <% } %>
                  </label>
                  <input
                    type="number"
                    value="<%= product.rating %>"
                    min="0"
                    max="5"
                    step="1"
                    name="rating"
                    placeholder="Ví dụ: 5, 4, 3, 2, 1"
                    class="form-control"
                    id="rating"
                  />
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mb-4">
                  <div class="image-box">
                    <i class="bi bi-x-lg float-end mb-2 image-delete"></i>
                    <img
                      src="<%= product.thumbnail %>"
                      alt="Hiển thị hình ảnh sản phẩm"
                      class="image-upload"
                    />
                  </div>
                  <label for="thumbnail">Ảnh (.png / .jpg)</label>
                  <input
                    type="file"
                    name="thumbnail"
                    accept="image/*"
                    class="form-control"
                    id="thumbnail"
                  />
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="" class="d-block">Trạng thái</label>
                  <input type="radio" name="status" value="active" <% if(product.status ===
                  'active') {%> checked <% } %> class="form-check-input bg-success"
                  id="status-active" />
                  <label for="status-active" class="me-4">Hoạt động</label>

                  <input type="radio" name="status" value="inactive" <% if(product.status ===
                  'inactive') {%> checked <% } %> class="form-check-input bg-warning"
                  id="status-inactive" />
                  <label for="status-inactive">Ngừng hoạt động</label>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-outline-primary w-100 form-create">
              <i class="bi bi-pencil-square me-1"></i>Cập nhật sản phẩm
            </button>
          </div>
        </form>
        <% } %>
      </div>
    </div>

    <!-- Script File -->
    <script src="/admin/scripts/previewImage.js"></script>

    <!-- Script Library & Framwork -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaf479b433.js" crossorigin="anonymous"></script>
    <script src="../../../reload/reload.js"></script>
  </body>
</html>
